---
import { cn } from '../lib/utils';

interface Props {
  class?: string;
  title?: string;
  className?: string; // Support both
}

const { class: classNameProp, className: classNameAlias, title } = Astro.props;
const finalClass = cn("brutalist-card flex flex-col h-full", classNameProp, classNameAlias);
---
<div class={finalClass}>
    {title && <h3 class="text-sm font-bold mb-4 uppercase tracking-wider text-zinc-400 border-b border-zinc-800 pb-2">{title}</h3>}
    <slot />
</div>
